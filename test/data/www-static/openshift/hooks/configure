# Exit on errors.
set -e


#
# Functions.
#
function configure_app() {
   os_log_debug "configure application $application_name"

}  #  End of function  configure_app.


function deconfigure_app() {
   os_log_debug "deconfigure application $application_name"

}  #  End of function  deconfigure_app.


#
# _main()
#
source $(cd -P -- "$(dirname -- "$0")" && pwd -P)/common.sh
[ $# -ge 1 ]  ||  os_print_hook_usage

case "$hook_name" in 
   configure)    configure_app    ;;
   deconfigure)  deconfigure_app  ;;
esac


#  Not doing any more in setup right now. Everything else will be done via
#  connectors (setup-connections).

