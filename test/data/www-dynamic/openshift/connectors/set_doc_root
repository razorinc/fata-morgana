# Exit on errors.
set -e

#
# _initialize()
#
cartridge_name="www-dynamic"
script=$(basename "$0")
[ -n "$_TRACE_HOOKS" ] && set -x
[ -n "$_TRACE_HOOKS" ] && echo "!TRACE! :$SHLVL: $cartridge_name->$script $@"
parameter_info="<application-guid> <component-guid> <connection-id> <doc-root>"


#
# _main()
#
source ../hooks/common.sh
os_initialize_hook_env "${_OPENSHIFT_APP_CONFIG_DIR}"
[ $# -eq 4 ]  ||  die 1 "Usage: $cartridge_name->$script ${parameter_info}"

# ./set_doc_root <app_guid> <comp_guid> <connection id> <doc root>
# (eg:file:///srv/webapps/132423423433423432/app)

# Parameter values.
app_guid=$1
comp_guid=$2

cfgdir="${_OPENSHIFT_APP_CONFIG_DIR:-'.'}/$comp_guid"

#  Replace document root in any/all config files.
for d in conf conf.d; do
   for f in `ls "${cfgdir}/$cartridge_name/$d"`; do
      sed -i "s#\(\s*DocumentRoot[ \t]\)\(.*\)\$#\1 $3 #"   \
                "${cfgdir}/$cartridge_name/$d/$f"
   done
done

exit 0
