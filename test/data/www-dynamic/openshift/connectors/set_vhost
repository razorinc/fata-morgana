# Exit on errors.
set -e


#
# _main()
#
source $(cd -P -- "$(dirname -- "$0")/../hooks/" && pwd -P)/common.sh
params="<app-name> <app-guid> <connection-id> <vhost-file>"
[ $# -ge 4 ]  ||  os_print_hook_usage "set VirtualHost" "$params"

# ./set_vhost <app_name> <app_guid> <connection id> <vhost file>
# (eg:file:///srv/webapps/132423423433423432/app/vostok/setup/vhost.conf)
vhost_file=${4:-""}

comp_guid=${OPENSHIFT_COMPONENT_GUID:-""}
confd_dir="${OPENSHIFT_APP_PROD_DIR:-'.'}/$app_config_subdir/$comp_guid/conf.d"

[ -n "$_DEBUG_HOOKS" ]  &&  os_log_debug "Setting vhost.conf from $vhost_file"
cp -f  "$vhost_file"  "$confd_dir/vhost.conf"

exit 0


