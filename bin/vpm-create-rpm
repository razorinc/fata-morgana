def usage
    puts <<USAGE
== Synopsis

vpm create-rpm: Creates a RPM from a VPM package and spec file

== Usage

vpm create-rpm VPM_DIR

Options:
-h|--help:
   Prints this message

VPM_DIR Directory where VPM distribution is located
USAGE
end

require 'vostok-sdk'

opts = GetoptLong.new(
    ["--porcelin",               GetoptLong::NO_ARGUMENT],
    ["--debug",                  GetoptLong::NO_ARGUMENT],
    ["--help",             "-h", GetoptLong::NO_ARGUMENT]
)

args = {}
begin
    opts.each{ |k,v| args[k]=v }
rescue GetoptLong::Error => e
    usage
    exit -100
end

$vpm_debug = true if args['--debug']
$porcelin = args['--porcelin'] ? true : false
vpm_dir = ARGV.shift

if args['--help'] || vpm_dir.nil? || (not File.exist?(vpm_dir + "/vostok/control.spec"))
  usage
  exit -101
end

vpm_file = Vostok::SDK::Rpm.create_rpm(vpm_dir)
system("cp #{vpm_file} .")
