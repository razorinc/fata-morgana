def usage
    puts <<USAGE
== Synopsis

opm create: Creates a new application container. This command must be run as root.

== Usage

opm create [NAME [VERSION]] [OPM_DIR] [OPTIONS]

Options:
-h|--help:
   Prints this message
   

NAME: The name of the application to create
VERSION: The starting version of the application. (Default: 0.1)
USAGE
end

require 'openshift-sdk'

opts = GetoptLong.new(
    ["--porcelin",               GetoptLong::NO_ARGUMENT],
    ["--debug",                  GetoptLong::NO_ARGUMENT],
    ["--help",             "-h", GetoptLong::NO_ARGUMENT]
)

args = {}
begin
    opts.each{ |k,v| args[k]=v }
rescue GetoptLong::Error => e
    usage
    exit -100
end

$opm_debug = true if args['--debug']
$porcelin = args['--porcelin'] ? true : false

arg1 = ARGV.shift
if File.directory? arg1
  opm_dir = arg1
else
  name = arg1
  version = ARGV.shift || "1.0"
end

if args['--help'] || (opm_dir.nil? && name.nil?)
  usage
  exit -101
end

app = nil
if opm_dir
  app = Openshift::SDK::Model::Application.from_opm(opm_dir)
else
  app = Openshift::SDK::Model::Application.new(name)
  app.version = version
end

app.gen_uuid
app.create!
print "Application with GUID: #{app.guid} created\n"